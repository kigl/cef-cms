{
    "name": "kigl/cef-project",
    "description": "CEF-CMS project",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "kigl/cef-module-comment": "*",
        "kigl/cef-module-infosystem": "*",
        "kigl/cef-module-page": "*",
        "kigl/cef-module-tag": "*",
        "kigl/cef-module-shop": "*",
        "kigl/cef-module-menu": "^1.0",
        "kigl/cef-module-lists": "^1.0",
        "kigl/cef-module-form": "^1.0",
        "yiisoft/yii2-debug": "^2.0",
        "yiisoft/yii2-gii": "^2.0"
    },

    "repositories": [
        {
            "type": "path",
            "url": "packagest/core"
        },
        {
            "type": "path",
            "url": "packagest/comment"
        },
        {
            "type": "path",
            "url": "packagest/backend"
        },
        {
            "type": "path",
            "url": "packagest/infosystem"
        },
        {
            "type": "path",
            "url": "packagest/user"
        },
        {
            "type": "path",
            "url": "packagest/shop"
        },
        {
            "type": "path",
            "url": "packagest/page"
        },
        {
            "type": "path",
            "url": "packagest/tag"
        },
        {
            "type": "path",
            "url": "packagest/form"
        },
        {
            "type": "path",
            "url": "packagest/menu"
        },
        {
            "type": "path",
            "url": "packagest/lists"
        }
    ],

    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "public/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "app/config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
