#!/usr/bin/env php
<?php
/**
 * Yii console bootstrap file.
 *
 * @link http://www.yiiframework.com/
 * @copyright Copyright (c) 2008 Yii Software LLC
 * @license http://www.yiiframework.com/license/
 */

use app\core\components\ConfigManager;

defined('YII_DEBUG') or define('YII_DEBUG', true);
defined('YII_ENV') or define('YII_ENV', 'dev');

require(__DIR__ . '/core/vendor/autoload.php');
require(__DIR__ . '/core/vendor/yiisoft/yii2/Yii.php');
// основная конфигурация
$baseConfig = require(__DIR__ . '/core/config/console.php');

// менеджер конфигураций
$config = Yii::createObject([
    'class' => ConfigManager::className(),
    'modulesPath' => '@app/modules',
    'type' => ConfigManager::CONFIG_TYPE_CONSOLE,
]);

$application = new yii\console\Application(array_merge_recursive($baseConfig, $config->getConfig()));
$exitCode = $application->run();
exit($exitCode);
