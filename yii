use app\components\ConfigManager;

defined('YII_DEBUG') or define('YII_DEBUG', true);
defined('YII_ENV') or define('YII_ENV', 'dev');

require(__DIR__ . '/app/vendor/autoload.php');
require(__DIR__ . '/app/vendor/yiisoft/yii2/Yii.php');
// менеджер конфигураций
require(__DIR__ . '/app/components/ConfigManager.php');
// основная конфигурация
$baseConfig = require(__DIR__ . '/app/config/console.php');

$config = new ConfigManager($baseConfig);

$application = new yii\console\Application($config->getConfig(ConfigManager::CONFIG_TYPE_CONSOLE));
$exitCode = $application->run();
exit($exitCode);
